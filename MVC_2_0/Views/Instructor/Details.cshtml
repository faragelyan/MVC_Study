@model MVC_2_0.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<style>
    .profile-img {
        width: 100%;
        max-height: 300px;
        object-fit: contain;
        border-radius: 12px;
        border: 3px solid #dee2e6;
        background-color: #f8f9fa;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .info-label {
        font-weight: 600;
        color: #333;
    }

    .info-value {
        color: #555;
    }

    .details-card {
        max-width: 550px;
        margin: 50px auto;
    }
</style>

<div class="container">
    <div class="card shadow details-card">
        <div class="p-3">
            <img src="~/images/@Model.ImageUrl" alt="@Model.Name" class="profile-img" />
        </div>

        <div class="card-body">
            <h3 class="card-title text-center mb-3">@Model.Name</h3>

            <div class="mb-2">
                <span class="info-label">📍 Address:</span>
                <span class="info-value"> @Model.Address </span>
            </div>

            <div class="mb-2">
                <span class="info-label">💰 Salary:</span>
                <span class="info-value"> @Model.Salary </span>
            </div>

            <div class="mb-2">
                <span class="info-label">🏢 Department:</span>
                <span class="info-value"> @(Model.Department?.Name ?? "N/A") </span>
            </div>

            <div class="mb-3">
                <span class="info-label">📘 Course:</span>
                <span class="info-value"> @(Model.Course?.Name ?? "N/A") </span>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">
                    ⬅ Back to All Instructors
                </a>
            </div>
        </div>
    </div>
</div>
