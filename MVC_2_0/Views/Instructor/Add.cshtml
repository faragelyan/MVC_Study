@using MVC_2_0.ViewModel
@model InstructorWithCrsDeptListViewModel

@{
    ViewData["Title"] = "Add New Instructor";
}

<div class="container mt-5 mb-5" style="max-width: 700px;">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="SaveAdd" asp-controller="Instructor" method="post">
        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" />
        </div>

        <!-- Salary -->
        <div class="mb-3">
            <label asp-for="Salary" class="form-label">Salary</label>
            <input asp-for="Salary" class="form-control" type="number" />
        </div>

        <!-- Image File -->
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image File Name</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <!-- Department Dropdown -->
        <div class="mb-3">
            <label asp-for="DeptId" class="form-label">Department</label>
            <select asp-for="DeptId" class="form-select" asp-items="@(new SelectList(Model.deptList, "Id", "Name"))">
                <option value="">-- Select Department --</option>
            </select>
        </div>

        <!-- Course Dropdown -->
        <div class="mb-4">
            <label asp-for="CrsId" class="form-label">Course</label>
            <select asp-for="CrsId" class="form-select" asp-items="@(new SelectList(Model.crsList, "Id", "Name"))">
                <option value="">-- Select Course --</option>
            </select>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
