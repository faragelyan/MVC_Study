@using MVC_2_0.ViewModel
@model InstructorWithCrsDeptListViewModel

@{
    ViewData["Title"] = "Add New Instructor";
}

<div class="container mt-5 mb-5" style="max-width: 700px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>

        <div class="card-body">
            <form asp-action="SaveAdd" method="post">
                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="mb-3">
                    <label asp-for="Salary" class="form-label"></label>
                    <input asp-for="Salary" type="number" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Image -->
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image File Name</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Department -->
                <div class="mb-3">
                    <label asp-for="DeptId" class="form-label"></label>
                    <select asp-for="DeptId" class="form-select" asp-items="@(new SelectList(Model.deptList, "Id", "Name"))">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DeptId" class="text-danger"></span>
                </div>

                <!-- Course -->
                <div class="mb-4">
                    <label asp-for="CrsId" class="form-label"></label>
                    <select asp-for="CrsId" class="form-select" asp-items="@(new SelectList(Model.crsList, "Id", "Name"))">
                        <option value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CrsId" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">💾 Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
